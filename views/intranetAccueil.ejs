    <script>
      let accordionHeader = document.getElementsByClassName("accordionHeader");
      let accordionBody = document.getElementsByClassName("accordionBody");
      let accordionTitle = document.getElementsByClassName("accordionTitle");
      let icon = document.getElementsByClassName("icon");
              
      for (let i = 0; i < accordionHeader.length; i++) {
        accordionHeader[i].addEventListener("click", () => {
              
          if (parseInt(accordionBody[i].style.height) != accordionBody[i].scrollHeight) {
            accordionBody[i].style.height = accordionBody[i].scrollHeight + "px";
            accordionTitle[i].style.color = "#196c28";
            icon[i].classList.remove("plus");
            icon[i].classList.add("minus");
          } else {
            accordionBody[i].style.height = "0px";
            accordionTitle[i].style.color = "#0a4e16";
            icon[i].classList.toggle("plus");
          }
              
          for (let j = 0; j < accordionBody.length; j++) {
            if (j !== i) {
              accordionBody[j].style.height = 0;
              accordionTitle[j].style.color = "#0a4e16";
              icon[j].classList.remove("minus");
              icon[j].classList.add("plus");
            }
          }
        });
      }
    </script>
