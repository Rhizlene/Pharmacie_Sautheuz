            <div class="wrapper">
              <div class="accordionHeader">
                <h2 class="accordionTitle">Ajouter</h2>
                <span class="icon plus"></span>
              </div>
              <div class="accordionBody">
                <ul class="list-group">
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/medecin/formulaire">un Médecin</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/patient/formulaire">un Patient</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/ordonnance/formulaire">une Ordonnance</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/pathologie/formulaire">une Pathologie</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/medicament/formulaire">un Médicament</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/diplome/formulaire">un Diplôme</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/mutuelle/formulaire">une Mutuelle</a></li>
                </ul>
              </div>
            </div>
            <div class="wrapper">
              <div class="accordionHeader">
                <h2 class="accordionTitle">Rechercher</h2>
                <span class="icon plus"></span>
              </div>
              <div class="accordionBody">
                <ul class="list-group">
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/medecin/recherche">un Médecin</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/patient/recherche">un Patient</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/ordonnance/recherche">une Ordonnance</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/medicament/recherche">un Médicament</a></li>
                  <li class="list-group-item bg-transparent"><a class="text-decoration-none link-success" href="http://localhost:3000/mutuelle/recherche">une Mutuelle</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  
              
    <script>
      let accordionHeader = document.getElementsByClassName("accordionHeader");
      let accordionBody = document.getElementsByClassName("accordionBody");
      let accordionTitle = document.getElementsByClassName("accordionTitle");
      let icon = document.getElementsByClassName("icon");
              
      for (let i = 0; i < accordionHeader.length; i++) {
        accordionHeader[i].addEventListener("click", () => {
              
          if (parseInt(accordionBody[i].style.height) != accordionBody[i].scrollHeight) {
            accordionBody[i].style.height = accordionBody[i].scrollHeight + "px";
            accordionTitle[i].style.color = "#196c28";
            icon[i].classList.remove("plus");
            icon[i].classList.add("minus");
          } else {
            accordionBody[i].style.height = "0px";
            accordionTitle[i].style.color = "#0a4e16";
            icon[i].classList.toggle("plus");
          }
              
          for (let j = 0; j < accordionBody.length; j++) {
            if (j !== i) {
              accordionBody[j].style.height = 0;
              accordionTitle[j].style.color = "#0a4e16";
              icon[j].classList.remove("minus");
              icon[j].classList.add("plus");
            }
          }
        });
      }
    </script>
  </div>

  <div class="container w-75 mt-5 d-flex justify-content-center"> 

    <div>
      <canvas id="chart" width="800" height="500"></canvas>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
      const ctx = document.getElementById('chart');
      const xlabel = [];
      const xdata = [];
    
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: xlabel,
          datasets: [{
            label: 'Etat des stocks',
            data: xdata,
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    </script>
     
  </div>

</div>
