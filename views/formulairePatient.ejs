<%- include('header_user') %>

<div id="inputContainer" class="container w-50 p-5">
    <div class="mb-4 text-center display-4">
        <h1 >Ajouter un Patient</h1>
    </div>
    <form action="/patient/formulaire"></form>
        <div class="input-group">
            <span class="input-group-text" id="">Nom</span>
            <input type="text" class="form-control" id="patNom" placeholder="">
        </div>
        <br>
        <div class="input-group">
            <span class="input-group-text" id="">Prenom</span>
            <input type="text" class="form-control" id="patPrenom" placeholder="">
        </div>
        <br>
        <div class="input-group">
            <span class="input-group-text" id="">Naissance</span>
            <input type="text" class="form-control" id="patNaissance" placeholder="">
        </div>
        <br>
        <div class="input-group">
            <span class="input-group-text" id="">Numéro sécurité sociale</span>
            <input type="text" class="form-control" id="patNumSecu" placeholder="">
        </div>
        <br>
        <div class="input-group">
            <span class="input-group-text" id="">Numéro de mutuelle (AMC) </span>
            <input type="text" class="form-control" id="patNumMut" placeholder="">
        </div>
        <br>
        <div class="input-group">
            <span class="input-group-text" id="">Mutuelle</span>
            <select class="form-select" name="chooseMut" id="chooseMut">
                <% formPatient.forEach(function(res){ %>
                    <option value="<%= res.mut_Nom %>"><%= res.mut_Nom %></option>
                <% }) %>  
            </select>
        </div>
        <br>

        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-success btn-block" id="btnAjouterPatient">Ajouter</button>
        </div>
    </form>
</div>

<%- include('footer') %>