<%- include('header_user') %>

    <div class="mb-4 text-center display-4">
        <h1 >Modifier un Médecin</h1>
    </div>

    <div class="container w-50 p-5">

    <div> <% dataMedecin.forEach(function(res){ %>
        <form action="/medecin/modifier/<%= res.med_Id %>" method="post" enctype="application/x-www-form-urlencoded"></form>
            
            <div class="input-group">
                <span class="input-group-text" id="">Nom</span>
                <input type="text" class="form-control" id="medNom" value="<%= res.med_Nom %>">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text" id="">Prénom</span>
                <input type="text" class="form-control" id="medPrenom" value="<%= res.med_Prenom %>">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text" id="">Diplome</span>
                <select class="form-select" name="medDiplome" id="medDiplome">
                    <% formMedecin.forEach(function(res){ %>
                        <option value="<%= res.dip_Id %>"><%= res.dip_Nom %></option>
                    <% }) %> 
                </select>
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text" id="">Numéro de téléphone</span>
                <input type="text" class="form-control" id="medNum" value="<%= res.med_Num %>">
            </div>
            <br>
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-success btn-block" id="btnAjouterMedecin">Ajouter</button>
            </div>
        </form>
    </div>

    <br>
    <a href="http://localhost:3000/medecin">⬅️</a>
    </div>

