<%- include('header_user') %>

    <div id="inputContainer" class="container w-50 p-5">
        <div class="mb-5 text-center display-4">
            <h1 >Ajouter un Médicament</h1>
        </div>
        <form action="/medicament/formulaire" method="post" enctype="application/x-www-form-urlencoded">
            <div class="row">
                <div class="input-group mb-3">
                    <span class="input-group-text" for="medicNom">Nom</span>
                    <input type="text" class="form-control" id="medicNom" name="medicNom">
                </div>
                <br>
                <small class="text-muted">(nombre de boites)</small>
                <div class="input-group  mb-3">
                    <span class="input-group-text" for="medicQteStock">Quantité en stock </span>
                    <input type="text" class="form-control" id="medicQteStock" name="medicQteStock">
                </div>
                <br>
                <small class="text-muted">(comprimé, pastille, pilule ...)</small>
                <div class="input-group mb-3">
                    <span class="input-group-text" for="medicType"> Type :</span>
                    <input type="text" class="form-control" id="medicType" name="medicType">
                </div>
                <hr class="my-4">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-success btn-block" id="btnAjouterMedicament">Ajouter</button>
                </div>
            </div>
            
        </form>
    </div>

<%- include('footer') %>